<body>
  <div class="backdrop" aria-hidden="true"></div>

  <div class="container" role="region" aria-label="Menú con botones de chequeo">
    <div class="menu-card">
      <h1 class="menu-title">Menú de Opciones</h1>

      <!-- Toggle para abrir/cerrar el menú -->
      <input type="checkbox" id="menu-toggle" class="menu-toggle" />
      <label for="menu-toggle" class="menu-label" aria-controls="menu-content" aria-expanded="false" onclick="toggleAria(event)">
        Mostrar Opciones
        <span class="chev" aria-hidden="true"></span>
      </label>

      <div id="menu-content" class="menu-content" role="group" aria-label="Opciones seleccionables">
        <label class="option"><input type="checkbox" /> <span class="option-label">Opción 1: Información</span></label>
        <label class="option"><input type="checkbox" /> <span class="option-label">Opción 2: Ajustes</span></label>
        <label class="option"><input type="checkbox" /> <span class="option-label">Opción 3: Notificaciones</span></label>
        <label class="option"><input type="checkbox" /> <span class="option-label">Opción 4: Ayuda</span></label>
      </div>

      <div class="note">Haz clic en "Mostrar Opciones" para desplegar el menú.</div>
    </div>
  </div>

<script>
  // Pequeña mejora de accesibilidad: actualizar aria-expanded cuando cambie el checkbox.
  const toggle = document.getElementById('menu-toggle');
  const label = document.querySelector('.menu-label');

  function updateAria(){
    const expanded = toggle.checked;
    label.setAttribute('aria-expanded', expanded ? 'true' : 'false');
    // también actualiza el atributo aria-expanded en el label (ya usado arriba)
  }

  // cuando el checkbox cambie (por teclado o clic), actualizamos aria-expanded
  toggle.addEventListener('change', updateAria);

  // al cargar la página, aseguramos atributo correcto
  updateAria();

  // función para evitar doble disparo de cambio de estado por el onclick del label en algunos navegadores
  function toggleAria(e){
    // espera micro-tick para que el checkbox ya haya cambiado su estado
    setTimeout(updateAria, 1);
  }
</script>
</body>
